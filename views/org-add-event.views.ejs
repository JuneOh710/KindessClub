<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs') %>
</head>

<body>
    <nav class="navbar navbar-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <img src="/images/plant-1.svg" alt="" width="30" height="24" class="d-inline-block align-text-top">
                Kindness Club
            </a>
            <div class="navbar-nav d-flex flex-row justify-content-evenly">
                <a class="nav-link me-sm-5 me-2">logout</a>
            </div>
    </nav>


    <main class="min-vh-100 container">



        <form class="row g-3 needs-validation mt-sm-3" action="/org/events" method="POST" novalidate>
            <!-- first row -->
            <!-- event name -->
            <div class="col-md-4">
                <label for="validationCustom01" class="form-label">Event name</label>
                <input type="text" name="eventName" class="form-control" id="validationCustom01" required>
                <div class="invalid-feedback">
                    Cannot leave this field empty.
                </div>
            </div>
            <!-- date -->
            <div class="col-md-4">
                <label for="date" class="form-label">Date</label>
                <input type="text" name="eventDate" class="form-control" id="date" placeholder="YYYY-MM-DD" required>
                <div class="invalid-feedback">
                    Please provide a valid date.
                </div>
            </div>
            <!-- time -->
            <!-- start time -->
            <div class="col-md-2 col-6">
                <label for="startTime" class="form-label">Start time</label>
                <select id="startTime" name="eventStart" class="form-select" aria-label="start time select" required>
                    <option selected disabled value="">Choose...</option>
                    <option value="6:00">6:00 am</option>
                    <option value="6:30">6:30 am</option>
                    <option value="7:00">7:00 am</option>
                    <option value="7:30">7:30 am</option>
                    <option value="8:00">8:00 am</option>
                    <option value="8:30">8:30 am</option>
                    <option value="9:00">9:00 am</option>
                    <option value="9:30">9:30 am</option>
                    <option value="10:00">10:00 am</option>
                    <option value="10:30">10:30 am</option>
                    <option value="11:00">11:00 am</option>
                    <option value="11:30">11:30 am</option>
                    <option value="12:00">12:00 pm</option>
                    <option value="12:30">12:30 pm</option>
                    <option value="13:00">1:00 pm</option>
                    <option value="13:30">1:30 pm</option>
                    <option value="14:00">2:00 pm</option>
                    <option value="14:30">2:30 pm</option>
                    <option value="15:00">3:00 pm</option>
                    <option value="15:30">3:30 pm</option>
                    <option value="16:00">4:00 pm</option>
                    <option value="16:30">4:30 pm</option>
                    <option value="17:00">5:00 pm</option>
                    <option value="17:30">5:30 pm</option>
                    <option value="18:00">6:00 pm</option>
                    <option value="18:30">6:30 pm</option>
                    <option value="19:00">7:00 pm</option>
                    <option value="19:30">7:30 pm</option>
                    <option value="20:00">8:00 pm</option>
                    <option value="20:30">8:30 pm</option>
                    <option value="21:00">9:00 pm</option>
                    <option value="21:30">9:30 pm</option>
                    <option value="22:00">10:00 pm</option>
                    <option value="22:30">10:30 pm</option>
                    <option value="23:00">11:00 pm</option>
                    <option value="23:30">11:30 pm</option>
                    <option value="00:00">12:00 am</option>
                    <option value="00:30">12:30 am</option>
                </select>
            </div>
            <!-- end time -->
            <div class="col-md-2 col-6">
                <label for="endTime" class="form-label">End time</label>
                <select id="endTime" name="eventEnd" class="form-select" aria-label="start time select" required>
                    <option selected disabled value="">Choose...</option>
                    <option value="6:00">6:00 am</option>
                    <option value="6:30">6:30 am</option>
                    <option value="7:00">7:00 am</option>
                    <option value="7:30">7:30 am</option>
                    <option value="8:00">8:00 am</option>
                    <option value="8:30">8:30 am</option>
                    <option value="9:00">9:00 am</option>
                    <option value="9:30">9:30 am</option>
                    <option value="10:00">10:00 am</option>
                    <option value="10:30">10:30 am</option>
                    <option value="11:00">11:00 am</option>
                    <option value="11:30">11:30 am</option>
                    <option value="12:00">12:00 pm</option>
                    <option value="12:30">12:30 pm</option>
                    <option value="13:00">1:00 pm</option>
                    <option value="13:30">1:30 pm</option>
                    <option value="14:00">2:00 pm</option>
                    <option value="14:30">2:30 pm</option>
                    <option value="15:00">3:00 pm</option>
                    <option value="15:30">3:30 pm</option>
                    <option value="16:00">4:00 pm</option>
                    <option value="16:30">4:30 pm</option>
                    <option value="17:00">5:00 pm</option>
                    <option value="17:30">5:30 pm</option>
                    <option value="18:00">6:00 pm</option>
                    <option value="18:30">6:30 pm</option>
                    <option value="19:00">7:00 pm</option>
                    <option value="19:30">7:30 pm</option>
                    <option value="20:00">8:00 pm</option>
                    <option value="20:30">8:30 pm</option>
                    <option value="21:00">9:00 pm</option>
                    <option value="21:30">9:30 pm</option>
                    <option value="22:00">10:00 pm</option>
                    <option value="22:30">10:30 pm</option>
                    <option value="23:00">11:00 pm</option>
                    <option value="23:30">11:30 pm</option>
                    <option value="00:00">12:00 am</option>
                    <option value="00:30">12:30 am</option>
                </select>
            </div>



            <!-- second row -->
            <!-- event details -->
            <div class="col-12">
                <label for="eventDetails" class="form-label">Event details</label>
                <textarea class="form-control" name="eventDetails" id="eventDetails" rows="5" required></textarea>
            </div>





            <!-- map -->
            <label for="eventLocation" class="form-label">Event location</label>
            <input id="eventLocationType" name="eventLocationType" type="hidden" value="" class="form-control"
                required />
            <input id="eventLocationCoordinates" name="eventLocationCoordinates" type="hidden" value=""
                class="form-control" required />
            <div class="d-flex justify-content-center">

                <div id="map" style='width: 99%; height: 40vh;'></div>

            </div>






            <!-- fourth row -->
            <div class="d-flex justify-content-start">
                <button class="btn btn-success" type="submit">Add event</button>
            </div>
        </form>
    </main>

    <script>
        const locationTypeId = 'eventLocationType';
        const locationCoordinatesId = 'eventLocationCoordinates';
    </script>
