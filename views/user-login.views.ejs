<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/head.ejs") %>
</head>

<body>
    <%- include("./partials/navbar.ejs") %>
        <main class="min-vh-100 container">
            <%- include('./partials/flash.ejs') %>
                <div class="row mt-5">
                    <div class="col-3"></div>
                    <h1 class="col-md-6">User login</h1>


                </div>

                <form action="/users/login" method="POST" class="needs-validation mt-3" novalidate>

                    <div class="row">
                        <div class="col-3"></div>
                        <div class="col-md-6">
                            <label class="form-label" for="floatingInput">Email address</label>
                            <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com"
                                name="username" required>
                        </div>

                    </div>
                    <div class="row mt-3">

                        <div class="col-3"></div>
                        <div class="col-md-6">

                            <label class="form-label" for="floatingPassword">Password</label>
                            <input type="password" class="form-control" id="floatingPassword" placeholder="Password"
                                name="password" required>

                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-3"></div>
                        <div class="d-flex justify-content-end col-md-6">
                            <button class="btn btn-outline-success">Login</button>
                        </div>


                    </div>

                </form>

        </main>


        <%- include("./partials/footer.ejs") %>
            <%- include("./partials/scriptTags.ejs") %>
</body>

</html>