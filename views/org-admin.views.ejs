<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/head.ejs") %>
</head>

<body>
    <main class="container mt-5">
        <h1>Admin page</h1>
        <div class="row">

            <div class="col-2"></div>


            <div class="col-8">
                <% for( let org of allOrgs) { %>
                    <div class="card mt-3">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= org.name %>
                                    <% if (org.verified) { %>
                                        <i class="far fa-check-square"></i>
                                        <% } %>

                            </h5>
                            <h6 class="card-subtitle mb-2 text-muted">
                                <%= org.email %>
                            </h6>

                            <% if (org.verified) { %>
                                <form action="/admin/invalidate" method="POST">
                                    <input type="text" value="<%= org._id %>" name="id" hidden>
                                    <button class="btn btn-outline-danger">invalidate</button>
                                </form>
                                <% } else { %>
                                    <form action="/admin/verify" method="POST">
                                        <input type="text" value="<%= org._id %>" name="id" hidden>
                                        <button href="/admin/verify" class="card-link btn btn-outline-success">Verify</>
                                    </form>
                                    <% } %>
                        </div>
                    </div>

                    <% } %>
            </div>


            <div class="col-2"></div>

        </div>





    </main>



    <%- include("./partials/scriptTags.ejs")%>
</body>

</html>